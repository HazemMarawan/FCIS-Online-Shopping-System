<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hazemmarawan.fcisshopping.ShoppingList">

    <Button
        android:id="@+id/DisShop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Display Shopping List" />

    <ImageButton
        android:id="@+id/AddOrderToDbID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_add_shopping_cart_black_24dp" />

    <TextView
        android:id="@+id/TotalOrderID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="100px"
        android:textColor="#000000"
        android:textStyle="italic"
        android:text="Total Order" />

    <ListView
        android:id="@+id/ShoppingListID"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </ListView>
</LinearLayout>
